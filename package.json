{
  "name": "@ilyeshdz/vaulted",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "version": "0.0.0",
  "description": "A modern agnostic escape game engine built with TypeScript in minds",
  "keywords": [
    "game",
    "engine",
    "escape-game",
    "typescript"
  ],
  "homepage": "https://github.com/ilyeshdz/vaulted",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilyeshdz/vaulted/issues"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run format && pnpm run lint"
  },
  "author": "Ilyes Hernandez <hdz.ilyes@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyeshdz/vaulted.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
